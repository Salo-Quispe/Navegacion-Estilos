<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="squispeT3A.Views.vPrincipal"
             Title="vPrincipal">
    <ScrollView>
        <VerticalStackLayout Padding="20">

            <Frame CornerRadius="15"
               BackgroundColor="DarkCyan"
               BorderColor="Gray"
               HasShadow="True"
               Padding="20"
               Margin="10">

                <VerticalStackLayout Spacing="10">
                    <Label Text="Resumen del Contacto" 
                       FontAttributes="Bold" 
                       FontSize="20" 
                       HorizontalOptions="Center" />

                    <Label x:Name="lblTipoId" Text="Tipo de ID: " />
                    <Label x:Name="lblIdentificacion" Text="IdentificaciÃ³n: " />
                    <Label x:Name="lblNombre" Text="Nombres: " />
                    <Label x:Name="lblApellido" Text="Apellidos: " />
                    <Label x:Name="lblCorreo" Text="Correo: " />
                    <Label x:Name="lblFecha" Text="Fecha de Nacimiento: " />
                    <Label x:Name="lblEdad" Text="Edad: " />
                    <Label x:Name="lblSalario" Text="Salario: " />
                    <Label x:Name="lblAporte" Text="Aporte al IESS: " />
                </VerticalStackLayout>

            </Frame>

            <Button Text="Exportar a TXT"
                x:Name="btnExportar"
                Clicked="btnExportar_Clicked"
                Style="{StaticResource ButtonStyle}" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>